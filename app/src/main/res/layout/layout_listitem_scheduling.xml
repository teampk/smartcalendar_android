<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginStart="10dp">

            <ImageView
                android:id="@+id/item_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_category_1_24dp"

                />


        </RelativeLayout>


        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/item_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/example_recycler_view_title"
            android:textColor="#000"
            android:textSize="25sp"
            android:gravity="center|start"/>

    </LinearLayout>


    <TextView
        android:layout_below="@+id/ll_title"
        android:layout_marginStart="50dp"
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/example_recycler_view_subtitle"
        android:textColor="@color/colorBlack"
        />

    <!--divider-->
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/item_time"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorLightGrayDivider"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>



</RelativeLayout>