<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.simmorsal.library.ConcealerNestedScrollView
        android:id="@+id/concealerNSV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackGround"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <!-- background 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_blank_behind_top_bar"
                android:background="@color/colorBackGround"
                android:focusable="true"
                android:focusableInTouchMode="true">

            </LinearLayout>

            <!-- content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="#ffffff">

                <!-- 잠드는 시간 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_element"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <!-- category item -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:text="잠드는 시간"
                            android:textColor="#000000"
                            android:textSize="@dimen/text_size"/>

                    </LinearLayout>



                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </RelativeLayout>

                    <!-- Edit Text 1-->

                    <TextView
                        android:id="@+id/tv_start"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="00:00"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:gravity="center|right"
                        />



                </LinearLayout>

                <!--divider-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorLightGray"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"/>

                <!-- 일어나는 시간 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_element"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <!-- category item -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:text="일어나는 시간"
                            android:textColor="#000000"
                            android:textSize="@dimen/text_size"
                            />

                    </LinearLayout>



                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </RelativeLayout>

                    <!-- Edit Text 1-->

                    <TextView
                        android:id="@+id/tv_end"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="06:00"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:gravity="center|right"
                        />



                </LinearLayout>




            </LinearLayout>

            <!-- background 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_background"
                android:background="@color/colorBackGround">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="@string/sleep_time_explain"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"
                    android:gravity="center"
                    />




            </LinearLayout>





        </LinearLayout>

    </com.simmorsal.library.ConcealerNestedScrollView>

    <android.support.v7.widget.CardView
        android:id="@+id/crdHeaderView"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/material_white_1000"
        android:layout_height="@dimen/height_top_bar"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_top_bar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="수면시간 설정"
                android:textSize="@dimen/text_size_subtitle"
                android:textColor="#000000"
                android:textStyle="bold"/>


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="확인"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:background="#00000000"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>



    </android.support.v7.widget.CardView>



</RelativeLayout>