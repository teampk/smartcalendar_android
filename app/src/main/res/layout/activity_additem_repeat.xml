<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/concealerNSV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- background 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/colorBackGround">

        </LinearLayout>

        <!-- repeat items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 안 함 -->
            <LinearLayout
                android:id="@+id/ll_repeat_nothing"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="안 함"
                    android:gravity="left|center"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </RelativeLayout>


                <ImageView
                    android:id="@+id/iv_repeat_check_nothing"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="01:00"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    app:srcCompat="@drawable/ic_check_red_24dp"/>

            </LinearLayout>

            <!--divider-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLightGray"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <!-- 매일 -->
            <LinearLayout
                android:id="@+id/ll_repeat_day"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="매일"
                    android:gravity="left|center"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </RelativeLayout>


                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/iv_repeat_check_day"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="01:00"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    app:srcCompat="@drawable/ic_check_red_24dp"/>

            </LinearLayout>

            <!--divider-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLightGray"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <!-- 매주 -->
            <LinearLayout
                android:id="@+id/ll_repeat_week"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="매주"
                    android:gravity="left|center"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </RelativeLayout>


                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/iv_repeat_check_week"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="01:00"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    app:srcCompat="@drawable/ic_check_red_24dp"/>

            </LinearLayout>

            <!--divider-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLightGray"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <!-- 매월 -->
            <LinearLayout
                android:id="@+id/ll_repeat_month"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="매월"
                    android:gravity="left|center"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </RelativeLayout>


                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/iv_repeat_check_month"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="01:00"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    app:srcCompat="@drawable/ic_check_red_24dp"/>

            </LinearLayout>

            <!--divider-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLightGray"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <!-- 매년 -->
            <LinearLayout
                android:id="@+id/ll_repeat_year"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="매년"
                    android:gravity="left|center"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </RelativeLayout>


                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/iv_repeat_check_year"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="01:00"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    app:srcCompat="@drawable/ic_check_red_24dp"/>

            </LinearLayout>

            <!--divider-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLightGray"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>


        <!-- background last -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorBackGround">

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/crdHeaderView"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        android:layout_height="50dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/ll_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    app:srcCompat="@drawable/ic_chevron_left_red_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="취소"
                    android:textColor="#cc0000"
                    android:textSize="16dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_top_bar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="반복"
                android:textSize="16dp"
                android:textColor="#000000"
                android:textStyle="bold"/>


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="확인"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:background="#00000000"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>



    </android.support.v7.widget.CardView>



</RelativeLayout>