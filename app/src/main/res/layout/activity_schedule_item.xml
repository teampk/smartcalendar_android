<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="scheduling"
            type="com.pkteam.smartcalendar.view.ScheduleItemActivity"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- top bar -->
        <RelativeLayout
            android:id="@+id/rl_top_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:background="@color/material_white_1000"
            android:layout_alignParentTop="true"

            >

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:background="#00000000"
                android:padding="0dp"
                android:text="취소"
                android:textColor="#cc0000"
                android:textSize="@dimen/text_size"
                android:onClick="@{scheduling::finishView}"
                />

            <TextView
                android:id="@+id/tv_top_bar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/btn_cancel"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="스케줄링"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_subtitle"
                android:textStyle="bold" />


        </RelativeLayout>

        <!-- background 1 -->
        <RelativeLayout
            android:layout_below="@+id/rl_top_bar"
            android:id="@+id/ll_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_blank_below_top_bar"
            android:background="@color/colorBackGround"
            android:focusable="true"
            android:focusableInTouchMode="true">

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/ll_background"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="400dp">

        </android.support.v7.widget.RecyclerView>


        <!-- background last -->
        <LinearLayout
            android:layout_below="@+id/recycler_view"
            android:layout_above="@+id/footer_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackGround"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/explain_scheduling_1"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                android:textStyle="bold"
                />
            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/explain_scheduling_2"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </RelativeLayout>


        </LinearLayout>


        <!-- bottom bar -->
        <LinearLayout
            android:id="@+id/footer_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            android:onClick="@{scheduling::onClickFooter}">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="스케줄링 진행"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />
        </LinearLayout>


    </RelativeLayout>
</layout>