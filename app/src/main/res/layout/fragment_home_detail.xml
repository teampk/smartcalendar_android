<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.FragmentHome">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <View
            android:id="@+id/view_top_bar_rec"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </View>

<!--
        <View
            android:id="@+id/background_gray"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="-20dp"
            android:background="#33000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </View>
-->


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar_detail"
            android:gravity="center"
            android:text="@string/top_bar_detail"
            android:textColor="@color/material_white_1000"
            android:textSize="@dimen/text_size_subtitle"
            android:textStyle="bold"
            android:background="@drawable/layout_rounded_primary"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/coordinator"
            app:layout_constraintTop_toBottomOf="@+id/tv_time"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_total"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/height_top_bar_detail"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

            </android.support.v7.widget.RecyclerView>

            <com.leinardi.android.speeddial.SpeedDialOverlayLayout
                android:id="@+id/overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:clickable_overlay="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            <com.leinardi.android.speeddial.SpeedDialView
                android:id="@+id/speedDial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="2dp"
                app:layout_behavior="@string/speeddial_scrolling_view_snackbar_behavior"
                app:sdExpansionMode="top"
                app:sdMainFabAnimationRotateAngle="135"
                app:sdMainFabClosedSrc="@drawable/ic_add_white_24dp"
                app:sdMainFabOpenedSrc="@drawable/ic_close_white_24dp"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />


        </android.support.design.widget.CoordinatorLayout>





    </android.support.constraint.ConstraintLayout>
</layout>