<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_parent">


    <RelativeLayout
        android:layout_width="15dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_marginStart="10dp">

        <ImageView
            android:id="@+id/item_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_category_1_24dp"

            />


    </RelativeLayout>

    
    <TextView
        android:id="@+id/item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/example_recycler_view_title"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_size_recycler_title"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/example_recycler_view_time"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:gravity="end|center"
        />

    <!--divider-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorLightGrayDivider"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>



</RelativeLayout>