<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_parent"
    android:layout_marginStart = "20dp"
    android:layout_marginEnd = "20dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/layout_item_rounded"
    android:orientation="horizontal"

    >


    <RelativeLayout
        android:layout_width="15dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_marginStart="10dp">

        <ImageView
            android:id="@+id/item_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_category_1_24dp"

            />


    </RelativeLayout>

    
    <TextView
        android:id="@+id/item_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/example_recycler_view_title"
        android:textColor="#000"
        android:gravity="center|start"
        android:textSize="@dimen/text_size_recycler_title"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/example_recycler_view_time"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:gravity="end|top"
        />



</LinearLayout>