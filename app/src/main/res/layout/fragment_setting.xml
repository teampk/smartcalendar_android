<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.simmorsal.library.ConcealerNestedScrollView
            android:id="@+id/concealerNSV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackGround">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- background 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_blank_behind_top_bar_main"
                    android:background="@color/colorBackGround">

                </LinearLayout>

                <!-- 카테고리 설정 -->
                <LinearLayout
                    android:id="@+id/ll_category_setting"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <!-- category item -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/ic_dashboard_black_24dp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:text="카테고리 설정"
                            android:textColor="#000000"
                            android:textSize="18dp" />

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </RelativeLayout>

                    <ImageView

                        android:id="@+id/iv_category_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:text="01:00"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        app:srcCompat="@drawable/ic_chevron_right_black_24dp" />


                </LinearLayout>

                <!--divider-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorLightGray" />

                <!-- 데이터 체크 -->
                <LinearLayout
                    android:id="@+id/ll_sleep_time"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <!-- category item -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/ic_access_alarm_black_24dp"

                            />

                        <TextView
                            android:id="@+id/tv_category_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:text="수면시간 설정"
                            android:textColor="#000000"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:text="01:00"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        app:srcCompat="@drawable/ic_chevron_right_black_24dp" />

                </LinearLayout>

                <!-- background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_background"
                    android:background="@color/colorBackGround">

                </LinearLayout>

                <!-- 어플리케이션 정보 -->
                <LinearLayout
                    android:id="@+id/ll_app_information"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <!-- category item -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/ic_bubble_chart_black_24dp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:text="어플리케이션 정보"
                            android:textColor="#000000"
                            android:textSize="18dp" />

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:text="01:00"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        app:srcCompat="@drawable/ic_chevron_right_black_24dp" />


                </LinearLayout>

                <!-- background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_background"
                    android:background="@color/colorBackGround">

                </LinearLayout>

                <!-- 데이터 체크 -->
                <LinearLayout
                    android:id="@+id/ll_check_data"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <!-- category item -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/ic_date_range_black_24dp"

                            />

                        <TextView
                            android:id="@+id/tv_category_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:text="모든 일정 데이터 보기"
                            android:textColor="#000000"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:text="01:00"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        app:srcCompat="@drawable/ic_chevron_right_black_24dp" />

                </LinearLayout>

                <!--divider-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorLightGray" />

                <!-- 모든 일정 데이터 삭제하기 -->
                <LinearLayout
                    android:id="@+id/ll_delete_all_data"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <!-- category item -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/ic_delete_forever_black_24dp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:text="모든 데이터 삭제"
                            android:textColor="#000000"
                            android:textSize="18dp" />

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:text="01:00"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        app:srcCompat="@drawable/ic_chevron_right_black_24dp" />


                </LinearLayout>

                <!-- background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@color/colorBackGround">

                </LinearLayout>


            </LinearLayout>

        </com.simmorsal.library.ConcealerNestedScrollView>

        <android.support.v7.widget.CardView
            android:id="@+id/crdHeaderView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar_main"
            app:cardBackgroundColor="@color/material_white_1000"
            >

            <RelativeLayout
                android:id="@+id/rl_top_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentBottom="true"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF000000"
                    app:civ_circle_background_color="@color/colorLightGray"
                    android:src="@drawable/ic_person_black_24dp"/>


                <TextView
                    android:id="@+id/tv_top_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="로그인이 필요합니다."
                    android:textColor="#000000"
                    android:textSize="@dimen/text_size_subtitle"
                    android:textStyle="bold"

                    android:layout_toEndOf="@+id/iv_profile"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="30dp"



                    />


            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>
</layout>