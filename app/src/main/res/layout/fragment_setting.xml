<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="setting"
            type="com.pkteam.smartcalendar.view.FragmentSetting"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.simmorsal.library.ConcealerNestedScrollView
            android:id="@+id/concealerNSV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/material_white_1000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <!-- background 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_blank_behind_top_bar_main"
                    android:background="@color/material_white_1000">

                </LinearLayout>

                <!-- 로그인 -->
                <LinearLayout
                    android:id="@+id/ll_profile"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:onClick="@{setting::profileListener}"

                    >

                    <!-- category item -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_profile"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="10dp"
                            app:civ_border_width="1dp"
                            app:civ_border_color="#FF000000"
                            app:civ_circle_background_color="@color/material_white_1000"
                            android:src="@drawable/ic_person_black_24dp"/>

                        <TextView
                            android:id="@+id/tv_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|end"
                            android:text="@string/string_setting_profile"
                            android:textColor="#000000"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|end"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_size"
                        app:srcCompat="@drawable/ic_chevron_right_black_24dp" />


                </LinearLayout>

                <!-- background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_background"
                    android:background="@color/material_white_1000">

                </LinearLayout>


                <!-- 카테고리 설정 -->
                <LinearLayout
                    android:id="@+id/ll_category_setting"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:onClick="@{setting::categoryListener}"
                    >

                    <!-- category item -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="10dp"
                            app:srcCompat="@drawable/ic_dashboard_black_24dp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|end"
                            android:text="@string/string_setting_category"
                            android:textColor="#000000"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </RelativeLayout>

                    <ImageView

                        android:id="@+id/iv_category_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|end"
                        app:srcCompat="@drawable/ic_chevron_right_black_24dp" />


                </LinearLayout>

                <!--divider-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorLightGray" />

                <!-- 수면시간 설정 -->
                <LinearLayout
                    android:id="@+id/ll_sleep_time"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:onClick="@{setting::sleepTimeListener}"
                    >

                    <!-- category item -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/ic_access_alarm_black_24dp"

                            />

                        <TextView
                            android:id="@+id/tv_category_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|end"
                            android:text="@string/string_setting_sleep_time"
                            android:textColor="#000000"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|end"
                        app:srcCompat="@drawable/ic_chevron_right_black_24dp" />

                </LinearLayout>

                <!-- background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_background"
                    android:background="@color/material_white_1000">

                </LinearLayout>

                <!-- 어플리케이션 정보 -->
                <LinearLayout
                    android:id="@+id/ll_app_information"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:onClick="@{setting::infAppListener}"
                    >

                    <!-- category item -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/ic_bubble_chart_black_24dp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|end"
                            android:text="@string/string_setting_app_info"
                            android:textColor="#000000"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|end"
                        app:srcCompat="@drawable/ic_chevron_right_black_24dp" />


                </LinearLayout>

                <!-- background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_background"
                    android:background="@color/material_white_1000">

                </LinearLayout>



                <!--divider-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorLightGray" />

                <!-- 모든 일정 데이터 삭제하기 -->
                <LinearLayout
                    android:id="@+id/ll_delete_all_data"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:onClick="@{setting::dataDeleteListener}"
                    >

                    <!-- category item -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/ic_delete_forever_black_24dp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|end"
                            android:text="모든 데이터 삭제"
                            android:textColor="#000000"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|end"
                        app:srcCompat="@drawable/ic_chevron_right_black_24dp" />


                </LinearLayout>

                <!-- background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_background"
                    android:background="@color/material_white_1000">

                </LinearLayout>

                <!-- 테스팅 -->
                <LinearLayout
                    android:id="@+id/ll_testing"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:onClick="@{setting::testingListener}"
                    >

                    <!-- category item -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/ic_face_black_24dp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|end"
                            android:text="테스팅"
                            android:textColor="#000000"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|end"
                        app:srcCompat="@drawable/ic_chevron_right_black_24dp" />

                </LinearLayout>

                <!-- 데이터 체크 -->
                <LinearLayout
                    android:id="@+id/ll_check_data"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:onClick="@{setting::checkAllDataListener}"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/ic_date_range_black_24dp"

                            />

                        <TextView
                            android:id="@+id/tv_category_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|end"
                            android:text="모든 일정 데이터 보기"
                            android:textColor="#000000"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|end"
                        app:srcCompat="@drawable/ic_chevron_right_black_24dp" />

                </LinearLayout>

                <!-- background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@color/material_white_1000">

                </LinearLayout>

            </LinearLayout>

        </com.simmorsal.library.ConcealerNestedScrollView>

        <android.support.v7.widget.CardView
            android:id="@+id/crdHeaderView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar_main"
            app:cardBackgroundColor="@color/material_white_1000"
            >

            <RelativeLayout
                android:id="@+id/rl_top_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <TextView
                    android:id="@+id/tv_top_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/string_setting"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold"

                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="15dp"

                    />


            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>
</layout>