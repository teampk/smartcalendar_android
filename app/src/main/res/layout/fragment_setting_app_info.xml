<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="appInfo"
            type="com.pkteam.smartcalendar.view.SettingAppInfo"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_top_bar"
                android:orientation="horizontal">

                <ImageView
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="@dimen/height_top_bar"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_close_black_24dp"
                    android:onClick="@{appInfo::finishView}"/>

            </LinearLayout>


            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:srcCompat="@drawable/logo_ts"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time Spoon"
                android:textSize="40dp"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Smart Calendar"
                android:textSize="24dp"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver 1.0.2"
                android:textSize="18dp"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                />




        </LinearLayout>

    </ScrollView>

</layout>