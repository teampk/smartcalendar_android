<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.simmorsal.library.ConcealerNestedScrollView
        android:id="@+id/concealerNSV"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- background 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/colorBackGround"
                android:focusable="true"
                android:focusableInTouchMode="true">

            </LinearLayout>

            <!-- title and location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 제목 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <EditText
                        android:id="@+id/et_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="제목"
                        android:gravity="left|center"
                        android:textSize="16dp"
                        android:textColor="#000000"
                        android:background="@null"
                        />

                </LinearLayout>

                <!--divider-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorLightGray"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"/>

                <!-- 위치 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <EditText
                        android:id="@+id/et_loc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="위치"
                        android:gravity="left|center"
                        android:textSize="16dp"
                        android:textColor="#000000"
                        android:background="@null"/>

                </LinearLayout>

            </LinearLayout>

            <!-- background 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorBackGround">

            </LinearLayout>

            <!-- Switch Static or Dynamic -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/tv_static_dynamic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Static"
                    android:gravity="left|center"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </RelativeLayout>

                <Switch
                    android:id="@+id/sw_static_dynamic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- background 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorBackGround">

            </LinearLayout>

            <!-- about time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- for dynamic -->
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_dynamic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Deadline -->
                    <LinearLayout
                        android:id="@+id/ll_time_deadline"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="데드라인"
                            android:gravity="left|center"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_date_deadline"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:text="2018.7.9"
                            android:textColor="#000000"
                            android:textSize="16dp"
                            android:layout_marginRight="15dp"/>

                        <TextView
                            android:id="@+id/tv_time_deadline"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:text="01:00"
                            android:textColor="#000000"
                            android:textSize="16dp"/>

                    </LinearLayout>

                    <!--divider-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorLightGray"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"/>

                    <!-- 필요시간 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="필요시간"
                            android:gravity="left|center"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            android:background="@null"
                            />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        </RelativeLayout>

                        <EditText
                            android:id="@+id/et_needtime"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:inputType="numberSigned"
                            android:gravity="center|right"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="시간"
                            android:textColor="#000000"
                            android:textSize="16dp"
                            android:gravity="center"/>

                    </LinearLayout>



                </LinearLayout>

                <!-- for static -->
                <LinearLayout
                    android:id="@+id/ll_static"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- 하루종일 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="하루 종일"
                            android:gravity="left|center"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        </RelativeLayout>

                        <Switch
                            android:id="@+id/sw_all_day"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"/>

                    </LinearLayout>

                    <!--divider-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorLightGray"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"/>

                    <!-- 시작 -->
                    <LinearLayout
                        android:id="@+id/ll_time_start"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="시작"
                            android:gravity="left|center"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_date_start"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:text="2018.7.9"
                            android:textColor="#000000"
                            android:textSize="16dp"
                            android:layout_marginRight="15dp"/>

                        <TextView
                            android:id="@+id/tv_time_start"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:text="01:00"
                            android:textColor="#000000"
                            android:textSize="16dp"/>

                    </LinearLayout>

                    <!--divider-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorLightGray"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"/>

                    <!-- 종료 -->
                    <LinearLayout
                        android:id="@+id/ll_time_end"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="종료"
                            android:gravity="left|center"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_date_end"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:text="2018.7.9"
                            android:textColor="#000000"
                            android:textSize="16dp"
                            android:layout_marginRight="15dp"/>

                        <TextView
                            android:id="@+id/tv_time_end"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:text="01:00"
                            android:textColor="#000000"
                            android:textSize="16dp"/>

                    </LinearLayout>

                </LinearLayout>

                <!--divider-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorLightGray"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"/>

                <!-- 반복 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="반복"
                        android:gravity="left|center"
                        android:textSize="16dp"
                        android:textColor="#000000"
                        />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_repeat"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_repeat"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:text="안 함"
                            android:textColor="#000000"
                            android:textSize="16dp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_chevron_right_black_24dp"
                            android:layout_marginLeft="5dp"
                            />
                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>

            <!-- background 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorBackGround">

            </LinearLayout>

            <!-- 카테고리 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="카테고리"
                    android:gravity="left|center"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_category"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_category"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_category_1_24dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"

                        />

                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:text="기본"
                        android:textColor="#000000"
                        android:textSize="16dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_chevron_right_black_24dp"
                        android:layout_marginLeft="5dp"
                        />
                </LinearLayout>



            </LinearLayout>

            <!-- background 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorBackGround">

            </LinearLayout>

            <!-- 메모 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <EditText
                    android:id="@+id/et_memo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="메모"
                    android:gravity="left|top"
                    android:textSize="16dp"
                    android:paddingTop="10dp"
                    android:textColor="#000000"
                    android:background="@null"
                    android:lines="10"
                    android:maxLines="10"
                    />

            </LinearLayout>


            <!-- background last -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorBackGround">

            </LinearLayout>


        </LinearLayout>

    </com.simmorsal.library.ConcealerNestedScrollView>

    <android.support.v7.widget.CardView
        android:id="@+id/crdHeaderView"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        android:layout_height="50dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="취소"
                android:textColor="#cc0000"
                android:textSize="16dp"
                android:background="#00000000"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:padding="0dp"
                />

            <TextView
                android:id="@+id/tv_top_bar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/btn_cancel"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="새로운 이벤트"
                android:textSize="16dp"
                android:textColor="#000000"
                android:textStyle="bold"/>


            <Button
                android:id="@+id/btn_add"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="등록"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:background="#00000000"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>



    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/linFooterView"
        android:background="@color/colorCategory1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="일정 삭제"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


</RelativeLayout>