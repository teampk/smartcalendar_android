<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_parent"
    android:layout_marginStart = "20dp"
    android:layout_marginEnd = "20dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/layout_item_calendar_rounded"
    android:orientation="horizontal"
    >


    <RelativeLayout
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginStart="5dp">

        <ImageView
            android:id="@+id/item_category"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_category_1_24dp"

            />


    </RelativeLayout>

    
    <TextView
        android:id="@+id/item_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/string_example_calendar_static_title"
        android:textColor="#000"
        android:textSize="@dimen/text_size"
        android:gravity="start|center"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/string_example_calendar_static_time"
        android:textSize="@dimen/text_size_small"
        android:gravity="end|center"
        android:layout_marginEnd="10dp"
        />





</LinearLayout>